<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="tuomomees.bain_soundboard_app.MainActivity"
android:background="@mipmap/background_image"
>

<TableLayout>
    <TableRow
        android:gravity="end">
        <Button
            android:layout_margin="30sp"
            android:id="@+id/buttonAbout"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@android:drawable/ic_dialog_info"
            android:onClick="onAboutButtonClicked" />
    </TableRow>
</TableLayout>

    <TableLayout
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">
            <TextView
                style="@style/TextViewStyle"
                android:id="@+id/bainPhraseTextView" />
    </TableLayout>

    <TableLayout
        android:layout_marginBottom="45sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp">
        <ListView
            android:gravity="center"
            android:background="@drawable/dialog_background_drawable"
            android:id="@+id/buttonListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </TableLayout>
</TableLayout>
